/* Open Sans font */
@import url(http://fonts.googleapis.com/css?family=Open+Sans)

/**
 * Ribesg's Jenkins theme
 */

/***********************
 ** General overrides **
 ***********************/

*
  box-sizing border-box

body, table, form, input, td, th, p, textarea, select
  /* Apply global font */
  font-family 'Open Sans', sans-serif
  font-size 14px

  /* Background */
  background-color #000000
  color #C8C8C8

.top-sticker-inner
  background-color #151515

#main-table + table
  display none

/***********
 ** Links **
 ***********/

a
#breadcrumbs li a
  :link
  :visited
    text-decoration none !important
    transition color .1s

/* All links */
a
  :link
  :visited
    color #00A000
    transition color .25s

  :hover
    color #00FF00

/* Breadcrumb */
#breadcrumbs li
  a
    :link
    :visited
      color #00FF00 !important

    :hover
      color #FFFFFF !important

  .children
  .separator
    background-image url(/job/JenkRib-theme/lastSuccessfulBuild/artifact/images/menu_right_arrow2.png) !important

#breadcrumb-menu-target *
  background-color #202020 !important
  color #00C000 !important

/* Task list */
.task
  height 35px
  line-height 35px
  font-size 16px
  transition background-color .25s

  :hover
    background-color #202020

  a
    :link
    :visited
      display inline-block
      height 24px

    :not(:first-child)
      position relative
      height 100%
      width 100%
      line-height 24px
      margin-left -28px
      padding-left 30px

